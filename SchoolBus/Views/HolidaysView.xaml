<Page x:Class="SchoolBus.Views.HolidaysView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Calendar materialDesign:CalendarAssist.Orientation="Horizontal">
        
        <Calendar.Background>
            <SolidColorBrush Color="Transparent"/>
        </Calendar.Background>

        <Calendar.Margin>
            <Thickness Left="150" Top="30" Right="150" Bottom="30"/>
        </Calendar.Margin>
        
        <materialDesign:CalendarAssist.HeaderBackground>
            <StaticResource ResourceKey="BusinessColor"/>
        </materialDesign:CalendarAssist.HeaderBackground>

        <materialDesign:CalendarAssist.SelectionColor>
            <StaticResource ResourceKey="BusinessColor"/>
        </materialDesign:CalendarAssist.SelectionColor>

        <materialDesign:CalendarAssist.HeaderForeground>
            <SolidColorBrush Color="Black"/>
        </materialDesign:CalendarAssist.HeaderForeground>

    </Calendar>

</Page>
